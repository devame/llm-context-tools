{
  "granularity": "function",
  "patterns": {
    "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "**/*.py"],
    "exclude": ["node_modules", ".git", ".llm-context", "test/**", "tests/**", "**/__pycache__", "**/*.pyc", "venv/**", ".venv/**"]
  },
  "analysis": {
    "detectSideEffects": true,
    "trackCallGraph": true,
    "trackDependencies": true,
    "maxCallDepth": 10
  },
  "incremental": {
    "enabled": true,
    "hashAlgorithm": "md5",
    "normalizeWhitespace": true,
    "storeSource": true,
    "detectRenames": true,
    "similarityThreshold": 0.85
  },
  "output": {
    "summaryLevels": ["L0", "L1", "L2"],
    "includeSourceInGraph": false,
    "includeDependencyGraph": true
  }
}
